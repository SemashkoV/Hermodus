<div class="cart-wrapper">
    <div class="cart-header">
        <h1>Корзина</h1>
        <a href="~/Home/Catalog">Продолжить покупки</a>
    </div>
    <div class="cart-info">
        
        <div class="cart-info-inner">
            @foreach (var item in Model.Cart.Lines)
            {
                <div class="cart-info-top">
                    <img src="@item.Watch.Image"/>
                    <p>@item.Watch.CompanyId @item.Watch.Model</p>
                    <div class="cart-info-top-double">
                        <p>Количество</p>
                        @item.Quantity
                    </div>
                    <div class="cart-info-top-double">
                        <p>Итого</p>
                        @((item.Quantity * item.Watch.Price).ToString("# USD"))
                    </div>
                </div>
            }
            <div class="cart-info-bottom">
                <p>Всего:</p>
                <p>@Model.Cart.ComputeTotalValue().ToString("# USD")</p>
            </div>
        </div>
        <div class="cart-info-delivery">
            <div class="cart-info-delivery-inner">
                <div class="cart-info-delivery-block">
                    <h1>1. Контактные данные</h1>
                </div>
                <div class="cart-info-delivery-block">
                    <div class="cart-info-delivery-block-double">
                        <p>@Html.Action("UserFName", "User")</p>
                        <input class="cart-inp" value=""onfocus="if (value == 'Ввести') {value = ''}"/>
                    </div>
                    <div class="cart-info-delivery-block-double">

                    </div>
                    <div class="cart-info-delivery-block-double">

                    </div>
                </div>
                <div class="cart-info-delivery-block">

                </div>
                <div class="cart-info-delivery-block">

                </div>
                <div class="cart-info-delivery-block">

                </div>
            </div>
        </div>
        
    </div>
</div>