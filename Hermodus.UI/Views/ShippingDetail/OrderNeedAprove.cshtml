@using X.PagedList.Mvc;
@using X.PagedList;

@model IPagedList<Hermodus.Data.ShippingDetail>
@{
    ViewBag.Title = "CommentNeedAprove";
    Layout = "~/Views/Shared/_Dashbord.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div><span class="fa fa-check-square-o fa-2x" aria-hidden="true"></span> Заказы</div>
    </div>
    <div class="panel-body">
        <table class="table table-hover table-responsive table-r">
            <tr class="com-resp">
                <th class="com-resp-th">Данные заказчика</th>
                <th class="com-resp-th">Комментарий</th>
                <th class="com-resp-th">Заказ</th>
                <th class="com-resp-th">Архив</th>

            </tr>

            @foreach (var item in Model)
            {
                <tr class="com-resp">
                    <td class="col-md-3 com-resp-td">
                        <div class="col-md-4">
                            <div>
                                <p style="margin-top:5px;margin-bottom:0;">Имя:</p>
                                @item.Name
                                <p style="margin-top:5px;margin-bottom:0;">Телефон:</p>
                                @item.Phone
                                <p style="margin-top:5px;margin-bottom:0;">Почта:</p>
                                @item.Mail
                                <p style="margin-top:5px;margin-bottom:0;">Адрес:</p>
                                @item.Address
                                
                            </div>

                        </div>

                    </td>
                    <td class="col-md-4 com-resp-td">
                        <p style="margin-top:5px;margin-bottom:0;">Комментарий:</p>
                        <p>@item.Comment</p>
                    </td>
                    <td class="col-md-4 com-resp-td">

                        <div>
                            <small>Заказ от </small>@item.Create_time
                        </div>
                        <a class="truncateOpt">
                            <p>
                                @Html.Raw(item.Cart)
                            </p>
                        </a>
                        <div>
                            @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |

                            @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                        </div>


                    </td>
                    <td  class="col-md-2">
                        @Html.ActionLink(" В архив", "PublishComment", new { id = item.Id }, new { @class = "btn btn-primary fa fa-cloud-upload" }) 
                    </td>

                </tr>
            }

        </table>
    </div>
    <div class="panel-footer">
        <div class="pagination text-center">
            @Html.PagedListPager(Model, page => Url.Action("OrderNeedAprove", new { page }))
        </div>@*end of paging*@

    </div>

    </div>
    

