@model Hermodus.Data.ShippingDetail

@{
    ViewBag.Title = "Редактирование заказа";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}
<div class="container body-content-pages ">
   

    @using (Html.BeginForm("AddNewOrder", "ShippingDetail", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2 style="margin-bottom:30px;">Редактирование заказа</h2>
            
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                <div class="col-md-12">
                    <h4 style="margin-bottom:10px; margin-top:10px;">Имя</h4>
                    @Html.TextAreaFor(model => model.Name, new { @class = "form-control" })
                    <h4 style="margin-bottom: 10px; margin-top: 10px;">Телефон</h4>
                    @Html.TextAreaFor(model => model.Phone, new { @class = "form-control" })
                    <h4 style="margin-bottom: 10px; margin-top: 10px;">Почта</h4>
                    @Html.TextAreaFor(model => model.Mail, new { @class = "form-control" })
                    <h4 style="margin-bottom: 10px; margin-top: 10px;">Адрес</h4>
                    @Html.TextAreaFor(model => model.Address, new { @class = "form-control" })
                    <h4 style="margin-bottom: 10px; margin-top: 10px;">Комментарий</h4>
                    @Html.TextAreaFor(model => model.Comment, new { @class = "ckeditor" })
                    @Html.HiddenFor(model => model.Create_time, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>

           

            

           

            <div class="form-group">
                <div class="col-md-12 input-group">
                    <button type="submit" class="btn btn-primary" aria-label="Left Align">
                        <span class="fa fa fa-pencil-square-o" aria-hidden="true"> </span> Publish
                    </button>
                </div>
            </div>
        </div>
    }

   
    </div>