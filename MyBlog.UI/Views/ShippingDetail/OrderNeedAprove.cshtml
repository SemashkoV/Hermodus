@using X.PagedList.Mvc;
@using X.PagedList;

@model IPagedList<MyBlog.Data.ShippingDetail>
@{
    ViewBag.Title = "CommentNeedAprove";
    Layout = "~/Views/Shared/_Dashbord.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div><span class="fa fa-check-square-o fa-2x" aria-hidden="true"></span> Comments</div>
    </div>
    <div class="panel-body">
        <table class="table table-hover table-responsive">
            <tr>
                <th>Author</th>
                <th>Comment</th>
                <th>Publish</th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="col-md-4">
                        <div class="col-md-2">

                           

                        </div><!-- /col-sm-1 -->
                        <div class="col-md-2">
                            <div>
                                <a class="truncateOpt" href="~/User/Details/@item.Name">
                                    @item.Phone  @item.Mail
                                </a>
                            </div>

                            <div>
                                @item.Address
                            </div>
                            <div>
                                @item.Comment
                            </div>

                        </div>

                    </td>
                    <td class="col-md-6">

                        <div>
                            <small>Submitted on </small>@item.Create_time
                        </div>
                        <a class="truncateOpt">
                            <div>
                                @Html.Raw(item.Cart)
                            </div>
                        </a>
                        <div>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |

                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </div>


                    </td>
                    <td  class="col-md-2">
                        @Html.ActionLink("Publish", "PublishComment", new { id = item.Id }, new { @class = "btn btn-primary fa fa-cloud-upload" }) 
                    </td>

                </tr>
            }

        </table>
    </div>
    <div class="panel-footer">
        <div class="pagination text-center">
            @Html.PagedListPager(Model, page => Url.Action("OrderNeedAprove", new { page }))
        </div>@*end of paging*@

    </div>

    </div>
    

