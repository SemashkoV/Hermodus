@model MyBlog.UI.Models.DashbordVM
@using System.Configuration;
@{
    string _DisplayRegister = ConfigurationManager.AppSettings["DisplayRegister"];
}
@{
    string _DisplayFbWidget = ConfigurationManager.AppSettings["DisplayFbWidget"];
    string _DisplayTwWidget = ConfigurationManager.AppSettings["DisplayTwWidget"];
    string _WebsiteRoot = HttpContext.Current.Request.Url.GetLeftPart(UriPartial.Authority);
}
<ul class="nav navbar-nav navbar-right">
    @{if (Model.User.RoleId == 1)
        {

            <li><a href="~/Post/NewPost"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Новый пост</a></li>
            <li><a href="~/Comment/CommentNeedAprove"><i class="fa fa-comments" aria-hidden="true"></i> Комментарии <span class="badge">@Model.NumberOfCommentNeedApprove</span></a></li>
            <li><a href="~/Account/index"><i class="fa fa-fw fa-dashboard"></i> Панель управления</a></li>
        }
        else if (Model.User.RoleId == 2)
        {

        }
       
    }
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" onclick="showHide('dropdown-menu')">
            @Html.Action("InsertImage", "Image", new { id = 20053 })
            <strong>@Model.User.FName @Model.User.LName</strong>
            <span class="glyphicon glyphicon-chevron-down"></span>
        </a>
        <ul class="dropdown-menu" id="dropdown-menu">
            <li>
                <div class="navbar-login">
                    <div class="row">
                        <div class="col-lg-4">
                            <p class="text-center">
                                <img class="img-responsive img-rounded" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png">
                            </p>
                        </div>
                        <div class="col-lg-8">
                            <p class="text-left"><strong>@Model.User.FName @Model.User.LName</strong></p>
                            <p class="text-left small">@Model.User.Email</p>
                            <p class="text-left">
                                <a href="~/User/Details/@Model.User.UserId" class="btn btn-primary btn-block btn-sm">Профиль</a>
                            </p>
                        </div>
                    </div>
                </div>
            </li>
            <li class="divider navbar-login-session-bg"></li>
            <li class="navbar-login-session-bg">
                <div class="navbar-login navbar-login-session">
                    <div class="row">
                        <div class="col-lg-12">

                            <a href="~/Account/Logout" class="btn btn-danger btn-block">Выйти</a>

                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </li>
</ul>



