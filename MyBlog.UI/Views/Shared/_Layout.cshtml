@using X.PagedList.Mvc;
@using X.PagedList;
@using System.Configuration;
@using MyBlog.Data;

@{
    string _DisplayFbWidget = ConfigurationManager.AppSettings["DisplayFbWidget"];
    string _DisplayTwWidget = ConfigurationManager.AppSettings["DisplayTwWidget"];
    string _WebsiteRoot = HttpContext.Current.Request.Url.GetLeftPart(UriPartial.Authority);
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/Loadme")
    @Styles.Render("~/Content/BootStrap")

    @Styles.Render("~/Content/font-awesome")
    @Styles.Render("~/Content/Site")
    @Styles.Render("~/Content/CSS-Footer")
    @Styles.Render("~/Content/CK-school_book")
    @Styles.Render("~/Content/style")
    @Styles.Render("~/Content/personal.css")
    <script src="~/scripts/jquery-3.1.1.js"></script>

</head>
<body>
    <div id="Loading">
        <div class="loadmeRect">
            <div class="loadmeRectChild loadmeRect1"></div>
            <div class="loadmeRectChild loadmeRect2"></div>
            <div class="loadmeRectChild loadmeRect3"></div>
            <div class="loadmeRectChild loadmeRect4"></div>
            <div class="loadmeRectChild loadmeRect5"></div>
        </div>
        <div class="loadme-mask"></div>
    </div>
    <div>


        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <a class="navbar-brand" href="~/Home/index">
                        Hermodus
                    </a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="~/Home/index">Home</a></li>
                        <li class="active"><a href="~/News/index">News</a></li>


                        @Html.Action("LastPage", "Page", new { })


                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>



        <div class="center-block">
            @RenderBody()
        </div>

        <!-- My footer class -->
        <div class="myf">
            <!-- FOOTER -->
            <div class="bg-texture">
                <footer>
                    <div class="container animatedParent">
                        <div class="row animated fadeInDownShort go">


                            <div class="col-md-5">
                                <!-- COLUMN 3 -->

                                <div class="social-connect">
                                    <h3 class="footer-heading">GET CONNECTED</h3>
                                    <ul class="list-inline social-icons">
                                        <li><a href="https://github.com/SemashkoV" class="github-bg"><i class="fa fa-github"></i></a></li>
                                        <li><a href="https://www.facebook.com" class="facebook-bg"><i class="fa fa-facebook"></i></a></li>
                                        <li><a href="https://www.youtube.com" class="youtube-bg"><i class="fa fa-youtube"></i></a></li>
                                        <li><a href="https://uk.linkedin.com" class="linkedin-bg"><i class="fa fa-linkedin"></i></a></li>
                                        <li><a href="@_WebsiteRoot/Home/Feed" class="rss-bg"><i class="fa fa-rss"></i></a></li>
                                    </ul>
                                </div>
                                <!-- END COLUMN 3 -->
                            </div>
                        </div>
                    </div>
                    <!-- COPYRIGHT -->
                    <div class="text-center copyright"> ©2022 SemashkoV. All Rights Reserved. </div>
                    <!-- END COPYRIGHT -->

                </footer>
            </div>
        </div><!-- END FOOTER -->


        <script>


            $(document).ready(function () {

                $("#Loading").hide();

            });
        </script>

        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/ckeditor")
        @Scripts.Render("~/bundles/modernizr")

        @Scripts.Render("~/bundles/FooterJs")
        @Scripts.Render("~/bundles/MyFile")
        @Scripts.Render("~/bundles/ImgUploder")
        <script src="https://www.google.com/recaptcha/api.js" async defer></script>
        <script type="text/javascript" src="http://www.google.co.uk/coop/cse/brand?form=cse-search-box&amp;lang=ar"></script>

        @RenderSection("scripts", required: false)



        <script src="~/scripts/ckeditor/plugins/codesnippet/lib/highlight/highlight.pack.js"></script>
        <script src="~/scripts/ckeditor/config.js"></script>
        <script type="text/javascript" src="https://www.google.com/jsapi"></script>



    </div>
</body>
</html>