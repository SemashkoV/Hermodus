@using X.PagedList.Mvc;
@using X.PagedList;
@model IEnumerable<MyBlog.Data.Page>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Dashbord.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">

        <div><span class="fa fa-file-text-o fa-2x" aria-hidden="true"></span> Страницы</div>
    </div>
    <div class="panel-body">
        <table class="table table-hover table-responsive table-r">
            <tr class="com-resp">
                <th class="com-resp-th">
                    Заглавие
                </th>

                <th class="com-resp-th">
                    Последнее обновление
                </th>
                <th class="com-resp-th">
                    Выпущено
                </th>
               
            </tr>

            @foreach (var item in Model)
            {
                <tr class="com-resp">
                    <td class="com-resp-td">
                        @item.Title
                    </td>

                    <td class="com-resp-td">
                        @item.Update_Time
                    </td>
                    <td class="com-resp-td">

                        @item.UserDetail.FName   @item.UserDetail.LName
                    </td>
                    <td class="com-resp-td">

                        @Html.ActionLink("Просмотреть", "Details", new { id = item.PageId }, new { @class = "btn btn-primary glyphicon glyphicon-modal-window" })
                        @Html.ActionLink("Редактировать", "Edit", new { id = item.PageId }, new { @class = "btn btn-primary glyphicon glyphicon glyphicon-edit" })
                        @Html.ActionLink("Удалить", "Delete", new { id = item.PageId }, new { @class = "btn btn-primary glyphicon glyphicon glyphicon-edit" })

                    </td>
                </tr>
            }

        </table>

    </div>
    <div class="panel-footer">
        @Html.ActionLink(" Новая страница", "AddNewPage", null, new { @class = "btn btn-primary fa fa-plus" })

    </div>

</div>